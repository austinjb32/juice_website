<%- include("partials/header"); -%>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h1 class="text-center mb-4">Login</h1>

        <form>
          <div class="mb-3">
            <label for="inputEmail" class="form-label">Email</label>
            <input type="email" class="form-control" id="inputEmail" name="email" required>
          </div>

          <div class="mb-3">
            <label for="inputPassword" class="form-label">Password</label>
            <input type="password" class="form-control" id="inputPassword" name="password" required>
          </div>

          <div class="captcha-img mb-3">
            <img src="https://via.placeholder.com/150x50.png?text=CAPTCHA" alt="CAPTCHA" class="img-fluid">
          </div>

          <div class="mb-3">
            <label for="inputCaptcha" class="form-label">Enter the text shown in the CAPTCHA image above</label>
            <input type="text" class="form-control" id="inputCaptcha" name="captcha" required>
          </div>

          <button type="submit" class="btn btn-primary btn-lg btn-block">Sign In</button>
        </form>

        <div class="mt-3 text-center">
          Don't have an account yet? <a href="\signup">Create an account</a>
        </div>
      </div>
    </div>
  </div>

  <%- include("partials/footer"); -%>