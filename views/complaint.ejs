<%- include("partials/header"); -%>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h1 class="text-center mb-4">Feedback & Complaints</h1>

        <form>
          <div class="mb-3">
            <label for="inputName" class="form-label">Name</label>
            <input type="text" class="form-control" id="inputName" name="name" required>
          </div>

          <div class="mb-3">
            <label for="inputEmail" class="form-label">Email</label>
            <input type="email" class="form-control" id="inputEmail" name="email" required>
          </div>

          <div class="mb-3">
            <label for="inputSubject" class="form-label">Subject</label>
            <input type="text" class="form-control" id="inputSubject" name="subject" required>
          </div>

          <div class="mb-3">
            <label for="inputMessage" class="form-label">Message</label>
            <textarea class="form-control" id="inputMessage" name="message" rows="6" required></textarea>
          </div>

          <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
        </form>

        <div class="mt-3 text-center">
          If you have any complaints, please email us at <a href="mailto:complaints@example.com">complaints@juicio.com</a>.
        </div>
      </div>
    </div>
  </div>


<%- include("partials/footer"); -%>